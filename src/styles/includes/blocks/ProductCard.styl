.ProductCard
	display grid
	grid-template-columns 100%
	grid-template-rows auto 1fr
	width 287px
	max-width 100%
	
	&_img
		display block
		
	&_textWrapper
		display grid
		grid-template-columns 100%
		grid-template-rows 1fr auto
		padding 19px 21px
		background $grey
	
	&_title
		margin-bottom 13px
		font-weight 500
		font-size 16px
		line-height 1.25
		color #181818
	
	&_bottom
		display grid
		grid-template-columns auto auto
		justify-content space-between
		align-items center
		padding-right 7px
	
	&_price
		display grid
		grid-template-columns auto auto
		align-items center
		gap 5px
		font-weight 500
		font-size 16px
		line-height 1.25
	
	&_priceLabel
		color #A6A6A6
	
	&_priceValue
		color $blue
	
	&_link
		display inline-grid
		border-bottom 1px solid #181818
		font-weight 700
		font-size 14px
		line-height 21px
		color #181818
		text-decoration none
		@extend .transition
		
		&:hover
			border-bottom-color transparent